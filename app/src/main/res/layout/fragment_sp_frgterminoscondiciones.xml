<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.com.encargalo.repartidor.Inicio_sesion.ui.Pedidos.pe_frgmenupedidos" >

    <Button
        android:id="@+id/tc_mtcbtnordenencurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tc_mtcbtnterminosycondiciones"
        android:background="@drawable/outlinebtn_green"
        android:text="Términos y condiciones de uso"/>

    <Button
        android:id="@+id/pe_mpebtnhistorialdeordenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tc_mtcbtnpoliticasdeprivacidad"
        android:background="@drawable/outlinebtn_green"
        android:text="Política de privacidad y datos personales"/>

    <Button
        android:id="@+id/pe_mpebtncobrosrealizados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tc_mtcbtnproductosprohibidos"
        android:background="@drawable/outlinebtn_green"
        android:text="Lista de productos prohibidos para venta"/>
</LinearLayout>