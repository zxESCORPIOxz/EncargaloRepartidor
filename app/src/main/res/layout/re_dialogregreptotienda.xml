<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:padding="20dp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/redondeado_gris_600"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/re_rebtnclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        android:layout_gravity="end"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/is_imglogo"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese el codigo de tienda para unirse a una"
        android:inputType="number"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/re_reedtcodtienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/redondeado_blanco"
            android:layout_margin="@dimen/activity_margin"
            android:inputType="text"
            android:gravity="center"
            android:hint="@string/re_varstringcodigo_de_tienda"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/re_rebtnregistrartienda"
        style="@style/txtstyle_white"
        android:layout_width="@dimen/btn_type01_width"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/containedbtn_green"
        android:text="@string/re_varstringsolicitar"
        />

</LinearLayout>
