<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.com.encargalo.repartidor.Inicio_sesion.ui.Mi_perfil.pf_frgperfil">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_title"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="@dimen/inner_frame_layout_padding"
        android:text="Nombre" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageButton"
        android:src="@drawable/pf_imgphoto"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_width="2dp"
        android:layout_marginRight="10dp"
        app:civ_border_color="@color/blackPrimary"
        app:civ_border_overlay="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/pf_perfil"
                android:text="PERFIL BASICO (información al público)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pf_pfedtdireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    style="@style/pf_iconperson"
                    android:hint="Nombre" />

                <Button
                    android:id="@+id/pf_pfbtnmoddireccion"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pf_pfedtnombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    style="@style/pf_iconphone"
                    android:hint="Telefono" />

                <Button
                    android:id="@+id/pf_pfbtnmodnombre"
                    style="@style/pf_buttongeneral" /> />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pf_pfedtnumero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    style="@style/pf_iconaddress"
                    android:hint="Dirección" />

                <Button
                    android:id="@+id/pf_pfbtnmodnumero"
                    style="@style/pf_buttongeneral" /> />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/pf_perfil"
                android:text="CARGAR DOCUMENTOS" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pf_pftxtfileregistrodevehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    style="@style/pf_iconvehicleregistration"
                    android:text="Registro de Vehículo"/>

                <Button
                    android:id="@+id/pf_pfbtnmodregistrodevehiculo"
                    style="@style/pf_buttongeneral" /> />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pf_pftxtfileregistrodelicencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    style="@style/pf_iconlicenseregistration"
                    android:text="Registro de Licencia" />
                <Button
                    android:id="@+id/pf_pfbtnmodregistrodelicencia"
                    style="@style/pf_buttongeneral" /> />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pf_pftxtfileregistrodeantecedentes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    style="@style/pf_iconbackgroundcheck"
                    android:text="Registro de antecedentes" />
                <Button
                    android:id="@+id/pf_pfbtnmodregistrodeantecedentes"
                    style="@style/pf_buttongeneral" /> />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pf_pftxtfiletargetadepropiedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    style="@style/pf_iconpropertycard"
                    android:text="Tarjeta de propiedad" />
                <Button
                    android:id="@+id/pf_pfbtnmodtargetadepropiedad"
                    style="@style/pf_buttongeneral" /> />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>