<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="InefficientWeight"
    tools:context="mx.com.encargalo.repartidor.Inicio_sesion.ui.Mi_perfil.pf_frgperfil">


    <TextView
        android:id="@+id/pf_prftxtnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_title"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="@dimen/inner_frame_layout_padding"
        android:text="@string/pf_varstringnombre" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pf_prfimgvwfoto"
        android:src="@drawable/pf_imgphoto"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_width="2dp"
        android:layout_marginRight="10dp"
        app:civ_border_color="@color/blackPrimary"
        app:civ_border_overlay="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/pf_perfil"
                android:text="@string/pf_varvarstringsubtitulo1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pf_pfedtdireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconperson"
                    android:hint="@string/pf_varstringnombre" />

                <Button
                    android:id="@+id/pf_pfbtnmoddireccion"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pf_pfedtnombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconphone"
                    android:hint="@string/pf_varstringtelefono" />

                <Button
                    android:id="@+id/pf_pfbtnmodnombre"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pf_pfedtnumero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconaddress"
                    android:hint="@string/pf_varstringdireccion" />

                <Button
                    android:id="@+id/pf_pfbtnmodnumero"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pf_pfedtmovilidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconvehicle"
                    android:hint="@string/pf_varstringvehiculo" />

                <Button
                    android:id="@+id/pf_pfbtnmodmovilidad"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pf_pfedtplaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconplaca"
                    android:hint="@string/pf_varstringplaca" />

                <Button
                    android:id="@+id/pf_pfbtnmodplaca"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/pf_perfil"
                android:text="@string/pf_varstringsubtitulo2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pf_pftxtfileregistrodevehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconvehicleregistration"
                    android:text="@string/pf_varstringregistrodeveh_culo"
                    />
                <Button
                    android:id="@+id/pf_pfbtnmodregistrodevehiculo"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pf_pftxtfileregistrodelicencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconlicenseregistration"
                    android:text="@string/pf_varstringregistrodelicencia" />
                <Button
                    android:id="@+id/pf_pfbtnmodregistrodelicencia"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pf_pftxtfileregistrodeantecedentes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconbackgroundcheck"
                    android:text="@string/pf_varstringregistro_de_antecedentes" />
                <Button
                    android:id="@+id/pf_pfbtnmodregistrodeantecedentes"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pf_pftxtfiletargetadepropiedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/pf_iconpropertycard"
                    android:text="@string/pf_varstringtarjeta_de_propiedad"/>
                <Button
                    android:id="@+id/pf_pfbtnmodtargetadepropiedad"
                    style="@style/pf_buttongeneral" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>