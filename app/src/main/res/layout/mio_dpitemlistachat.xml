<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mio_content_mensaje"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mio_lnl_contedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:maxWidth="300dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/outline_textinputedittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mio_imgv_user"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mio_tv_item_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="15sp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/blackPrimary"
                android:text="Nombre" />
            <TextView
                android:id="@+id/mio_tv_item_rol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="10sp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/blackPrimary"
                android:text="Rol" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/mio_tv_item_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:text="Mensaje"

                android:layout_marginHorizontal="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="normal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mio_tv_item_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingLeft="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/blackPrimary"
                    android:textAlignment="viewEnd"
                    android:text="Fecha"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>