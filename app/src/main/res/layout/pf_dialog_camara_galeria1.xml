<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:gravity="center"
        android:background="@drawable/redondeado_blanco">
        <ImageView
            android:id="@+id/btn_close1"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"
            android:tint="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:ignore="UseAppTint" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medio"
            style="@style/Headline_5"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginVertical="20dp"
            android:text="Â¿Como desea subir la imagen?"
            android:textAlignment="center"
            style="@style/Subtitle_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Camara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="Camara"
                style="@style/Contained_button_blue"/>

            <Button
                android:id="@+id/btn_Galeria1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="Galeria"
                style="@style/Contained_button_green"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>