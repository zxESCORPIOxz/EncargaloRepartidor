<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:padding="20dp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/redondeado_azul_400"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/is_imglogo"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese lo datos de su vehiculo"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/re_respntipo"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_margin"
        android:layout_height="40dp"
        android:entries="@array/vehiculos"
        android:background="@drawable/redondeado_blanco" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/re_reedtnombrevehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/redondeado_blanco"
            android:maxLength="20"
            android:layout_margin="@dimen/activity_margin"
            android:inputType="text"
            android:hint="@string/re_varstringnombre_de_vehiculo"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/re_reedtplaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/redondeado_blanco"
            android:maxLength="10"
            android:layout_margin="@dimen/activity_margin"
            android:inputType="text"
            android:hint="@string/re_varstringplaca_del_vehiculo"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/re_rebtnregistrar"
        style="@style/txtstyle_white"
        android:layout_width="@dimen/btn_type01_width"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/containedbtn_green"
        android:text="@string/re_varstringregistrar"
        />

</LinearLayout>
