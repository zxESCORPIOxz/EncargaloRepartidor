<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/green_600</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/blackPrimary</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="background">@color/blue_400</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blackPrimary</item>
    </style>
    <!-- Modulo Notificaciones. -->
    <style name="nt_notificaciones">
        <item name="android:padding">@dimen/activity_margin</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/txt_size_paragraph</item>
        <item name="android:background">@color/whitePrimary</item>
    </style>

    <!-- Modulo login -->

    <style name="is_btnlogin">
        <item name="android:background">@drawable/redondeado_azul</item>
        <item name="android:paddingTop">@dimen/btn_type05_paddingTop</item>
        <item name="android:paddingBottom">@dimen/btn_type05_paddingBottom</item>
        <item name="android:paddingLeft">@dimen/btn_type05_paddingLeft</item>
        <item name="android:paddingRight">@dimen/btn_type05_paddingRight</item>
        <item name="android:layout_marginTop">@dimen/btn_type05_paddingTop</item>
        <item name="android:layout_marginBottom">@dimen/btn_type05_paddingBottom</item>
        <item name="android:layout_marginLeft">@dimen/btn_type05_paddingLeft</item>
        <item name="android:layout_marginRight">@dimen/btn_type05_paddingRight</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/whitePrimary</item>
    </style>

    <!-- Modulo perfil. -->
    <style name="pf_perfil">
        <item name="android:background">@color/grey_600</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/blackPrimary</item>
    </style>

    <style name="pf_general">
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="pf_iconperson" parent="pf_general">
        <item name="android:drawableLeft">@drawable/pf_iconpersona</item>
    </style>

    <style name="pf_iconphone" parent="pf_general">
        <item name="android:drawableLeft">@drawable/pf_icontelefono</item>
    </style>

    <style name="pf_iconaddress" parent="pf_general">
        <item name="android:drawableLeft">@drawable/pf_icondireccion</item>
    </style>

    <style name="pf_iconvehicleregistration" parent="pf_general">
        <item name="android:drawableLeft">@drawable/pf_icondocumento</item>
    </style>

    <style name="pf_iconlicenseregistration" parent="pf_general">
        <item name="android:drawableLeft">@drawable/pf_icondocumento</item>
    </style>

    <style name="pf_iconbackgroundcheck" parent="pf_general">
        <item name="android:drawableLeft">@drawable/pf_icondocumento</item>
    </style>

    <style name="pf_iconpropertycard" parent="pf_general">
        <item name="android:drawableLeft">@drawable/pf_icondocumento</item>
    </style>
    <style name="pf_buttongeneral">
        <item name="android:foreground">@drawable/pf_iconeditcontent</item>
        <item name="android:background">@color/transparentPrimary</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">@dimen/inner_frame_layout_padding</item>
    </style>
    <!-- Modulo pedidos. -->
    <style name="pe_mpebtngeneral">
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/txt_size_paragraph</item>
    </style>

    <style name="pe_mpebtnhistorialdeordenes" parent="pe_mpebtngeneral">
        <item name="android:drawableLeft">@drawable/pe_icontruck</item>
    </style>
    <style name="pe_mpebtncobrosrealizados" parent="pe_mpebtngeneral">
        <item name="android:drawableLeft">@drawable/ic_prueba</item>
    </style>
    <style name="pe_mpebtnordenencurso" parent="pe_mpebtngeneral">
        <item name="android:drawableLeft">@drawable/pe_iconqrcode</item>
    </style>
    <style name="pe_rgobtngeneral">
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/txt_size_paragraph</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="pe_rgotxtidorden">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/txt_size_paragraph</item>
        <item name="android:textColor">@color/blackPrimary</item>
    </style>
    <style name="pe_rgotxtdireccion">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/txt_size_paragraph</item>
        <item name="android:textColor">@color/blackPrimary</item>
    </style>
    <style name="pe_rgobtnfunciones">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/green_800</item>
        <item name="android:background">@color/transparentPrimary</item>
    </style>

    <!-- Modulo Soporte. -->
    <style name="sp_mspbtngeneral">
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/redondeado_transparente</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="sp_mspbtncentrodeayuda" parent="sp_mspbtngeneral">
        <item name="android:drawableLeft">@drawable/sp_iconquestioncircle</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>

    <style name="sp_mspbtnteminosycondiciones" parent="sp_mspbtngeneral">
        <item name="android:drawableLeft">@drawable/sp_iconnewspaper</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>

    <style name="sp_mspbtncompartirencargalo" parent="sp_mspbtngeneral">
        <item name="android:drawableLeft">@drawable/sp_iconshare</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>

    <style name="sp_mspbtnacercade" parent="sp_mspbtngeneral">
        <item name="android:drawableLeft">@drawable/sp_iconinfosquare</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>

    <style name="sp_mspbtncerrarsesion" parent="sp_mspbtngeneral">
        <item name="android:drawableLeft">@drawable/sp_iconboxarrowright</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>
    <!-- Modulo Soporte - centro de ayuda. -->
    <style name="sp_mcabtnpreguntas">
        <item name="android:background">@color/green_600</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableLeft">@drawable/sp_iconquestionlg</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>

    <style name="sp_mcabtnvideos">
        <item name="android:background">@color/green_600</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableLeft">@drawable/sp_iconplaybtnfill</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>

    <style name="sp_mcabtnconsulta">
        <item name="android:background">@color/green_600</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableLeft">@drawable/sp_iconpluscirclefill</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>
    <!-- Modulo Soporte - preguntas. -->
    <style name="sp_pfbtnprg">
        <item name="android:background">@color/green_600</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>
    <!-- Modulo Soporte - terminos y condiciones. -->

    <style name="tc_mtcbtnordenencurso">
        <item name="android:background">@color/green_600</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableLeft">@drawable/ic_prueba</item>
        <item name="android:drawableRight">@drawable/icon_chevronright</item>
    </style>
</resources>